@model Stat_reports.Models.BranchLoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Вход для филиала</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to right, #003366, #0066cc);
            color: white;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.2);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 400px;
        }

        .btn-login {
            background: #ffcc00;
            color: #003366;
        }
    </style>
</head>
<body>
    <div class="login-container text-center">
        <h2>Вход для филиала</h2>
        <form asp-action="BranchLogin" method="post">
            <div class="mb-3">
                <label for="unp" class="form-label">УНП филиала</label>
                <input asp-for="UNP" class="form-control" id="unp" placeholder="УНП филиала" required>
                <span asp-validation-for="UNP" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Пароль</label>
                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Пароль" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-login w-100">Продолжить</button>
        </form>
            <div class="text-center mt-4 mb-4">
        @* Классы Bootstrap для центрирования и вертикальных отступов *@
        <p>
            @* Ссылка на экшен контроллера. controller="Home" если метод DownloadUserManual в HomeController *@
                <a asp-controller="Auth" asp-action="DownloadUserManual" style="color:snow;" target="_blank">
                Скачать руководство пользователя
            </a>
        </p>
    </div>
    </div>

    <script src="@Html.Raw("https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>